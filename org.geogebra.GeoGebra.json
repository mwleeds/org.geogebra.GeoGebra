{
    "app-id": "org.geogebra.GeoGebra",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "geogebra",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home",
        "--extra-data=GeoGebra-Linux64-Portable-6-0-400-0.zip:5e101799b841ce8ef2db117aa500486c8f1abaef13828d3c9fc5b52ac1259c63:65492617::https://download.geogebra.org/installers/6.0/GeoGebra-Linux64-Portable-6-0-400-0.zip"
    ],
    "modules": [
        {
            "name": "geogebra",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "file",
                    "path": "geogebra.desktop"
                },
                {
                    "type": "file",
                    "path": "geogebra.png"
                },
                {
                    "type": "file",
                    "path": "appdata.xml"
                },
                {
                    "type": "script",
                    "dest-filename": "apply_extra",
                    "commands": [
                        "unzip GeoGebra-Linux64-Portable-6-0-400-0.zip",
                        "rm -f GeoGebra-Linux64-Portable-6-0-400-0.zip"
                    ]
                },
                {
                    "type": "script",
                    "commands": ["exec /app/extra/GeoGebra-linux-x64/GeoGebra \"$@\""],
                    "dest-filename": "geogebra.sh"
                }
            ],
            "build-commands": [
                "mkdir -p /app/bin",
                "install -Dm755 apply_extra /app/bin",
                "install -Dm755 geogebra.sh /app/bin/geogebra",
                "install -Dm644 geogebra.desktop /app/share/applications/org.geogebra.GeoGebra.desktop",
                "install -Dm644 geogebra.png /app/share/icons/hicolor/256x256/apps/org.geogebra.GeoGebra.png",
                "install -Dm644 appdata.xml /app/share/appdata/org.geogebra.GeoGebra.appdata.xml"
            ]
        }
    ]
}

